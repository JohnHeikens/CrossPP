{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            },
            "linux": {
                "MIMode": "gdb"
            },
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/a",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "make",
            "args": [],
            "externalConsole": false,
            "environment": [],
            "visualizerFile": "${workspaceFolder}/visualization.natvis",
            "showDisplayString": true,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "catch throw",
                    "description": "Catch all exceptions"
                }
            ],
        }
