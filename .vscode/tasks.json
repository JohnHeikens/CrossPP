{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "windows" :{
                "command": "mingw32-make.exe -j12 -lz"
            },
            "linux" :{
                "command" : "make -j$((`nproc`)) -lz"
            },
            "osx" :{
                "command" : "make -j$((`sysctl -n hw.ncpu`)) -lz"
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}