{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "windows" :{
                "command": "ninja.exe CXXFLAGS=\"-g\" --version -j12"
            },
            "linux" :{
                "command" : "make -j$((`nproc`))"
            },
            "osx" :{
                "command" : "make -j$((`sysctl -n hw.ncpu`))"
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "windows" :{
                "command": "ninja --version -t clean"
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        }
    ]
}